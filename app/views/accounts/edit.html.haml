.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", accounts_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_account_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_account_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Account
    .inner
      = form_for @account, :url => account_path(@account), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
