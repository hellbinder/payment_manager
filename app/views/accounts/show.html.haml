.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", accounts_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_account_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", account_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.account.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @account.name
      %p
        %b
          = t("activerecord.attributes.account.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @account.description
      %p
        %b
          = t("activerecord.attributes.account.balance", :default => t("activerecord.labels.balance", :default => "Balance"))
          \:
        = @account.balance
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_account_path(@account), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), account_path(@account), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
