.group
  = f.label :name, t("activerecord.attributes.payment_source.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :payment_source_type_id, t("activerecord.attributes.payment_source.payment_source_type_id", :default => "Payment source type"), :class => :label
  = f.collection_select :payment_source_type_id, @payment_source_types, :id, :name, :prompt => "Select a source" 
  %span.description Ex: a simple text
.group
  = f.label :description, t("activerecord.attributes.payment_source.description", :default => "Description"), :class => :label
  = f.text_area :description, :class => 'text_area'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), payment_sources_path, :class => "text_button_padding link_button"
